<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

     <extension
         point="org.eclipse.ui.preferencePages">

               
      <page
            class="net.tourbook.srtm.PrefPageSRTM"
            id="net.tourbook.ext.srtm.PrefPageSRTM"
            name="%pref_page_srtm">
      </page>
      <page
            category="net.tourbook.preferences.PrefPageAppearance"
            class="net.tourbook.srtm.PrefPageSRTMColors"
            id="net.tourbook.ext.srtm.PrefPageSRTMColors"
            name="%pref_page_srtm_colors">
      </page>
      
   </extension>
   
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="net.tourbook.srtm.PreferenceInitializer">
      </initializer>
   </extension>

   <extension
         point="de.byteholder.geoclipse.tilefactory">
      <tilefactory
            class="net.tourbook.srtm.tilefactory.SRTMMapProvider"
            name="SRTM Map Provider"/>
   </extension>

</plugin>
