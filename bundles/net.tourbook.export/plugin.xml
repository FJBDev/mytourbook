      <export
         id             ="net.tourbook.export.gpx"
         class          ="net.tourbook.export.ExportTourGPX"
         name           ="GPX"
         fileextension  ="gpx"
         icon           ="gpx-file.png"
      />

      <export
         id             ="net.tourbook.export.tcx"
         class          ="net.tourbook.export.ExportTourTCX"
         name           ="TCX"
         fileextension  ="tcx"
         icon           ="garmin-file.png"
      />

      <export
         id             ="net.tourbook.export.mt"
         class          ="net.tourbook.export.ExportTour_MT"
         name           ="MyTourbook (.mt)"
         fileextension  ="mt"
         icon           ="mt-file.png"
      />
      
      <export
         id             ="net.tourbook.export.fit"
         class          ="net.tourbook.export.ExportTourFIT"
         name           ="FIT"
         fileextension  ="fit"
         icon           ="fit-file.png"
      />
      
