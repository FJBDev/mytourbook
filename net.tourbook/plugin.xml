      </view>
      <category
            id="net.tourbook.category.tour"
            name="%view_category.tour">
      </category>
      <view
            category="net.tourbook.category.tour"
            class="net.tourbook.ui.views.TourChartView"
            icon="icons/tour-chart.gif"
            id="net.tourbook.views.TourChartView"
            name="%View_Tour_Chart">
      </view>
      <view
            category="net.tourbook.category.tour"
            class="net.tourbook.ui.views.TourMarkerView"
            icon="icons/marker-editor.gif"
            id="net.tourbook.views.TourMarkerView"
            name="%View_Marker"/>
      <category
            id="net.tourbook.category.tourAnalyze"
            name="%view_category.analyzeTours">
      </category>
     <view
           category="net.tourbook.category.tourAnalyze"
           class="net.tourbook.ui.views.TourChartAnalyzerView"
           icon="icons/chart-analyzer.gif"
           id="net.tourbook.views.TourChartAnalyzer"
           name="%View_Tour_Analyzer"/>
      <view
            category="net.tourbook.category.tourAnalyze"
            class="net.tourbook.ui.views.TourSegmenterView"
            icon="icons/tour-segmenter.gif"
            id="net.tourbook.views.TourSegmenter"
            name="%View_Tour_Segmenter"/>
      <view
            category="net.tourbook.category.tourAnalyze"
            class="net.tourbook.ui.views.tourMap.CompareResultView"
            icon="icons/tourfinder-compare.gif"
            id="net.tourbook.views.tourMap.CompareResultView"
            name="%View_Compare_Result"/>
      <category
            id="net.tourbook.category.system"
            name="%view_category.system">
      </category>
                <view
            name="Progress View"
            icon="icons/pview.gif"
            category="net.tourbook.category.system"
            class="org.eclipse.ui.ExtensionFactory:progressView"
            id="org.eclipse.ui.views.ProgressView">
         </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="net.tourbook.application.PerspectiveFactoryTourBook"
            icon="icons/tour-list-perspective.gif"
            id="net.tourbook.perspective.TourBook"
            name="%Perspective_TourBook">
      </perspective>
      <perspective
            class="net.tourbook.application.PerspectiveFactoryRawData"
            icon="icons/rawdata-perspective.gif"
            id="net.tourbook.perspective.RawData"
            name="%Perspective_RawData">
      </perspective>
      <perspective
            class="net.tourbook.application.PerspectiveFactoryTourMap"
            icon="icons/tour-map-perspective.gif"
            id="net.tourbook.perspective.TourMap"
            name="%Perspective_TourMap">
      </perspective>
      <perspective
            class="net.tourbook.application.PerspectiveFactoryStatistic"
            icon="icons/statistics-perspective.gif"
            id="net.tourbook.perspective.Statistic"
            name="%Perspective_Statistics">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="net.tourbook.perspective.RawData">
         <perspectiveShortcut
               id="net.tourbook.perspective.TourBook">
         </perspectiveShortcut>
         <perspectiveShortcut
               id="net.tourbook.perspective.TourMap">
         </perspectiveShortcut>
         <perspectiveShortcut
               id="net.tourbook.perspective.Statistic">
         </perspectiveShortcut>
         <viewShortcut
               id="net.tourbook.views.TourChartAnalyzer">
         </viewShortcut>
         <viewShortcut
               id="net.tourbook.views.TourChartView">
         </viewShortcut>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="net.tourbook.perspective.TourBook">
         <perspectiveShortcut
               id="net.tourbook.perspective.RawData">
         </perspectiveShortcut>
         <perspectiveShortcut
               id="net.tourbook.perspective.TourMap">
         </perspectiveShortcut>
         <perspectiveShortcut
               id="net.tourbook.perspective.Statistic">
         </perspectiveShortcut>
         <viewShortcut
               id="net.tourbook.views.tourListView">
         </viewShortcut>
         <viewShortcut
               id="net.tourbook.views.TourChartView">
         </viewShortcut>
         <viewShortcut
               id="net.tourbook.views.TourSegmenter">
         </viewShortcut>
         <viewShortcut
               id="net.tourbook.views.TourChartAnalyzer">
         </viewShortcut>
         <viewShortcut
               id="net.tourbook.views.TourMarkerView">
         </viewShortcut>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="net.tourbook.perspective.TourMap">
         <perspectiveShortcut
               id="net.tourbook.perspective.TourBook">
         </perspectiveShortcut>
         <perspectiveShortcut
               id="net.tourbook.perspective.RawData">
         </perspectiveShortcut>
         <perspectiveShortcut
               id="net.tourbook.perspective.Statistic">
         </perspectiveShortcut>
         <viewShortcut
               id="net.tourbook.views.tourMap.TourMapView">
         </viewShortcut>
         <viewShortcut
               id="net.tourbook.views.TourChartView">
         </viewShortcut>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="net.tourbook.perspective.Statistic">
         <perspectiveShortcut
               id="net.tourbook.perspective.TourBook">
         </perspectiveShortcut>
         <perspectiveShortcut
               id="net.tourbook.perspective.RawData">
         </perspectiveShortcut>
         <perspectiveShortcut
               id="net.tourbook.perspective.TourMap">
         </perspectiveShortcut>
         <viewShortcut
               id="net.tourbook.views.TourChartView">
         </viewShortcut>
         <viewShortcut
               id="net.tourbook.views.StatisticView">
         </viewShortcut>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="net.tourbook.tour.TourEditor"
            icon="icons/tourfinder.gif"
            id="net.tourbook.tour.TourEditor"
            name="Tour Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.elementFactories">
      <factory
            class="net.tourbook.tour.TourEditorInputFactory"
            id="net.tourbook.tour.TourEditorInputFactory">
      </factory>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="net.tourbook.definition.activePartId_contains_tourChart">
         <with
               variable="activePartId">
            <or>
               <equals
                     value="net.tourbook.tour.TourEditor">
               </equals>
               <equals
                     value="net.tourbook.views.TourChartView">
               </equals>
            </or>
         </with>
      </definition>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="net.tourbook.toolbars.graphs">
            <command
                  commandId="net.tourbook.command.graph.altitude"
                  disabledIcon="icons/graph-altitude-disabled.gif"
                  icon="icons/graph-altitude.gif"
                  id="net.tourbook.toolbar.graph.altitude"
                  label="%Command_graph_altitude_label"
                  style="toggle"
                  tooltip="%Command_graph_altitude_tooltip">
            </command>
            <command
                  commandId="net.tourbook.command.graph.speed"
                  disabledIcon="icons/graph-speed-disabled.gif"
                  icon="icons/graph-speed.gif"
                  id="net.tourbook.toolbar.graph.speed"
                  style="toggle"
                  label="%Command_graph_speed_label"
                  tooltip="%Command_graph_speed_tooltip">
            </command>
            <command
                  commandId="net.tourbook.command.graph.pulse"
                  disabledIcon="icons/graph-pulse-disabled.gif"
                  icon="icons/graph-pulse.gif"
                  id="net.tourbook.toolbar.graph.pulse"
                  style="toggle"
                  label="%Command_graph_pulse_label"
                  tooltip="%Command_graph_pulse_tooltip">
            </command>
            <command
