                  style="toggle"
                  label="%Command_graph_cadence_label"
                  tooltip="%Command_graph_cadence_tooltip">
            </command>
            <command
                  commandId="net.tourbook.command.graph.altimeter"
                  disabledIcon="icons/graph-altimeter-disabled.gif"
