<?xml version="1.0" encoding="UTF-8"?>

<project name="create-translation-file" default="create-translation-archive" basedir="..">

	<description>
            create archive file with all translatable property files
    </description>

	<property name="mt-trunk" value=".." />
	<property name="ant-working" value="${basedir}/ant-working" />
	<property name="translation-files" value="${ant-working}/translations" />
	<property name="translation-temp" value="${translation-files}/temp" />


	<fileset dir="${mt-trunk}" id="property-files">
		<include name="**/plugin*.properties" />
		<include name="**/src/**/messages*.properties" />
	</fileset>

	<target name="create-translation-archive" description="create archive file with all translatable property files">

		<zip destfile="${basedir}/mt-translation.zip">
			<fileset refid="property-files" />
		</zip>

	</target>

</project>
