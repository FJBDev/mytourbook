<?xml version="1.0" encoding="UTF-8"?>

<project name="Rename Product Archives" default="rename-product-archives">

	<target name="rename-product-archives">
		
		<echo message="tycho-path:     '${tycho-path}'"/>
		<echo message="tycho-version:  '${tycho-version}'"/>

		<move 
			file	="${tycho-path}\products\mytourbook-${tycho-version}-linux.gtk.x86.zip"
			tofile	="${tycho-path}\products\mytourbook-${tycho-version}-linux-32.zip"/>
		
		<move 
			file	="${tycho-path}\products\mytourbook-${tycho-version}-linux.gtk.x86_64.zip"
			tofile	="${tycho-path}\products\mytourbook-${tycho-version}-linux-64.zip"/>

		<move 
			file	="${tycho-path}\products\mytourbook-${tycho-version}-win32.win32.x86.zip"
			tofile	="${tycho-path}\products\mytourbook-${tycho-version}-win-32.zip"/>
		
		<move 
			file	="${tycho-path}\products\mytourbook-${tycho-version}-win32.win32.x86_64.zip"
			tofile	="${tycho-path}\products\mytourbook-${tycho-version}-win-64.zip"/>
	
	</target>
	
</project>
